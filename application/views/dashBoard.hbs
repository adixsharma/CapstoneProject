<body>
    <h2>{{header_name}}</h2>
    <!-- Welcome message -->
    <p>Welcome to Dashboard, {{user_name}}!</p>

    <div class="container">
        <!-- Button group for navigation -->
        <div class="button-group">
            <button id="MessagesBtn">Messages</button>
            <button id="tutorPostsBtn">Tutor Posts</button>
            {{!-- <button id="recoverProfilesBtn">Recover Profiles</button> --}}
        </div>

        <!-- Message Section -->
        <section id="messageSection" class="dynamic-section">
            <h2>Messages</h2>
            <div id="messagesContent">
                <!-- Placeholders for individual message -->
                {{#each messages}}
                <div class="message">
                    <p><strong>Name:</strong> {{name}}</p>
                    <p><strong>Subject:</strong> {{subject}}</p>
                    <p><strong>Date:</strong> {{date}}</p>
                    <p><strong>Contact:</strong> {{contact}}</p>
                    <p><strong>Message:</strong> {{message}}</p>
                </div>
                {{/each}}
            </div>
        </section>

        <!-- Posts Section -->
        <section id="profileSection" class="dynamic-section">
            <h2>Posts</h2>
            <div class="profile-container" id="profilesContent">
                <!-- Placeholders for individual post -->
                {{#each posts}}
                <div class="post" id="{{id}}" class="{{className}}">
                    <img src="{{imgSrc}}" alt="Post Image" />
                    <p><strong>Title:</strong> {{title}}</p>
                    <p><strong>Description:</strong> {{description}}</p>
                </div>
                {{/each}}
            </div>
            <button id="undoBtn" class="undo-btn">Undo Last Delete</button>
        </section>
    </div>

    <!-- Including the external JS file -->
    <script src="/dashboard.js"></script>
</body>